    "@types/node": "^12.7.12",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "@peerigon/typescript-validate": "file:/.",
    "eslint": "^5.16.0",
    "eslint-config-peerigon": "^25.0.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-prefer-arrow": "^1.1.7",
    "jest": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
